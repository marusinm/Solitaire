<?xml version="1.0" encoding="UTF-8" ?>
<project basedir="." default="compile" name="IJA-2017">
    <description>ija.ija2016.Solitaire</description>

    <property name="src" location="src"/>
    <property name="build" location="build"/>
    <property name="dest" location="dest"/>
    <property name="lib" location="lib"/>
    <property name="doc" location="doc"/>

    <!--<path id="classpath">-->
        <!--<fileset dir="${src}" includes="ija/ija2016/gui/ija.ija2016.Solitaire.jar" />-->
        <!--<fileset dir="src/ija/ija2016/gui"/>-->
    <!--</path>-->

    <!-- CLEAN -->
    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dest}"/>
    </target>

    <!-- COMPILE -->
    <!--includes="ija/xml/XMLDemo.java"-->
    <target name="compile" depends="clean" description="Compile">
        <mkdir dir="${build}"/>
        <javac srcdir="${src}"
               destdir="${build}"
               encoding="ISO8859-2"
               includeantruntime="false"/>

        <mkdir dir="${dest}"/>
        <jar destfile="${dest}/Solitaire.jar" basedir="${build}">
            <manifest>
                <!--<attribute name="Main-Class" value="ija/ija2016/gui/ija.ija2016.Solitaire"/>-->
                <attribute name="Main-Class" value="ija.ija2016.Solitaire"/>
            </manifest>
        </jar>
        <mkdir dir="${dest}/lib"/>
    </target>

    <target name="run">
        <!--<java classname="ija.ija2016.Solitaire" fork="true" >-->
            <!--<classpath>-->
                <!--<path refid="classpath" />-->
                <!--<path location="ija.ija2016.Solitaire.jar" />-->
            <!--</classpath>-->
        <!--</java>-->
        <java jar="${dest}/Solitaire.jar" dir="${dest}" fork="true"/>
    </target>

</project>